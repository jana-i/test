@model IEnumerable<new_proekt.Models.client>

@{
    ViewBag.Title = "Index";
}
<html>
<body>
    <br />
    <br />
    <p>
        <button type="button" class="btn btn-default">@Html.ActionLink("Add User To Role", "AddUserToRole", "Account")</button>
    </p>
    <p style="float:right">
        
        <button type="button" class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>

    </p>
    <table class="table">
        <thead class="thead-dark" style="background-color: whitesmoke">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Adress</th>
                <th scope="col">Phone</th>
                <th scope="col">Club card</th>
                <th scope="col">Age</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @{i++;} @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clubcard)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        <button class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </button>

                        <div class="modal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Modal body text goes here.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </button>
                        <button class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
<style>
    body, html {
        background-color: #D3D3D3;
    }
</style>
</body>
</html>