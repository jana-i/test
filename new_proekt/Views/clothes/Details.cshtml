    <div style="float: right; margin-right: 460px; font-family: math;">
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <div class="card-body">
            <p class="card-text"><b>@Html.DisplayFor(model => model.Description)</b></p>
