        </ul>
        <div class="card-body">
            @if (User.IsInRole("Manager"))
            {
                <button class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                </button>
            }


        </div>

