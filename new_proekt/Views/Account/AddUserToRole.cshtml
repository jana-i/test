@model new_proekt.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}
<html>
<body>
    <br />
    <br />
    <h2><b>Add user with this email to a role:</b></h2>
    <br />

    @using (Html.BeginForm("AddUserToRole", "Account"))
    {
        <div class="form-group">
            @Html.LabelFor(z => z.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" });
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    }

<style>
    body {
        background-color: #D3D3D3;
    }
</style>
</body>
</html>